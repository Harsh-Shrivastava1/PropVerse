rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Only allow builder to access their own files
    match /builders/{builderId}/{allPaths=**} {
       allow read, write: if request.auth != null && request.auth.uid == builderId;
    }
    
    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
