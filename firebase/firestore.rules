rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is the builder owner
    function isBuilder(builderId) {
      return request.auth != null && request.auth.uid == builderId;
    }
    
    // Helper to check if email is verified
    function isVerified() {
    	return request.auth.token.email_verified == true;
    }

    match /builders/{builderId} {
      // Builder Profile: Allow read/write if owner.
      // We allow unverified users to read/write their own profile to update status.
      allow read, write: if isBuilder(builderId);
      
      // Subcollections (Projects, Units, etc.):
      // STRICTLY require email verification.
      match /{document=**} {
        allow read, write: if isBuilder(builderId) && isVerified();
      }
    }

    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
